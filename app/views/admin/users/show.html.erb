<%= show_for @user do |s| %>
  <% unless @user.roles.empty?  %>
    <%= s.attribute :roles, collection_tag: :span, to_sentence: true do |role| %>
      <%= role.name %>
    <% end %>
  <% end %>

  <%= s.attribute :email %>
  <%= s.attribute :display_name %>
  <%= s.attribute :full_name %>
  <%= s.attribute :created_at, format: :short %>
  <%= s.attribute :updated_at, format: :short %>
  <%= s.attribute :last_sign_in_at, format: :short %>
<% end %>

<%= link_to t(:edit), edit_admin_user_path(@user), class: 'btn btn-default' %>
<%= link_to t(:back), admin_users_path, class: 'btn btn-default' %>
